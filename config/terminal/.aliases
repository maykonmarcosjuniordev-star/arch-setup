alias list='cat ~/.aliases'
alias upd='paru -Suy --noconfirm && rustup update && sudo pacman -Qdtq | sudo xargs -r pacman -Rns --noconfirm'
alias get_music='yt-dlp --format bestaudio --extract-audio --audio-format mp3 --audio-quality 192K --extract-thumbnail --output "%(title)s.%(ext)s"'
alias fix-blue="pactl set-card-profile $(pactl list cards | rg 'Name: bluez' | awk '{print $2}') a2dp-sink"
alias edit='code -n --disable-extensions'
alias set-ssh='ssh-add -q ~/.ssh/id_rsa'
alias maskrun='mask --maskfile README.md'

## Rust replacements
alias diff='diff --color=auto'
alias grep='rg --color=auto'
alias find='fd --color=auto'
alias ls='exa --color=auto'
alias cat='bat'
alias du='dust'
# core uutils
alias dd='uu-dd'
alias pwd='uu-pwd'
alias df='uu-df -h'
alias mv='uu-mv -f'
alias cp='uu-cp -rf'
alias date='uu-date'
alias echo='uu-echo'
alias head='uu-head'
alias kill='uu-kill'
alias rm='uu-rm -rf'
alias chmod='uu-chmod'
alias chown='uu-chown'
