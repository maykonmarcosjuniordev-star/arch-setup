{
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "terminal.external.linuxExec": "ghostty",
    "terminal.integrated.defaultProfile.linux": "bash",
    // To skip committing sensitive data, the following line must be altered separately
    // For every commit,
    //      remove the token below
    //      git update-index --no-skip-worktree config/vs-code/settings.json
    //      stage the changes
    //      add the token back
    //      git update-index --skip-worktree config/vs-code/settings.json
    "workbench.startupEditor": "none",
    "accessibility.dimUnfocused.enabled": true,
    "python.analysis.typeCheckingMode": "standard",
    "terminal.integrated.tabs.focusMode": "singleClick",
    "editor.tabCompletion": "on",
    "terminal.integrated.inheritEnv": false,
    "github.copilot.nextEditSuggestions.enabled": true,
    "workbench.colorTheme": "matrixResolutions4128-2",
    "github.copilot.enable": {
        "*": true
    },
    "files.autoSave": "onFocusChange",
    "git.ignoreRebaseWarning": true,
    "editor.fontFamily": "'UbuntuMono Nerd Font Mono'",
    "terminal.integrated.fontFamily": "'UbuntuMono Nerd Font Mono'",
    "editor.codeLensFontFamily": "'Ubuntu Mono Nerd Font Mono Regular'",
    "editor.fontSize": 16,
    "terminal.integrated.fontLigatures.enabled": true,
    "workbench.editorAssociations": {
        "*.copilotmd": "vscode.markdown.preview.editor",
        "*.md": "default"
    },
    "editor.wordWrap": "on",
    "files.exclude": {
        "**/.git": false
    },
    "editor.autoIndentOnPaste": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "security.workspace.trust.startupPrompt": "never"
}