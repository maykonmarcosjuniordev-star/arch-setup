alias list='cat ~/.aliases'
alias upd='paru -Suy --noconfirm && rustup update && sudo pacman -Qdtq | sudo xargs -r pacman -Rns --noconfirm'
alias get-music='yt-dlp --format bestaudio --extract-audio --audio-format mp3 --audio-quality 192K --embeded-thumbnail --output "%(title)s.%(ext)s"'
alias fix-blue="pactl set-card-profile $(pactl list cards | grep 'Name: bluez' | awk '{print $2}') a2dp-sink"
alias set-ssh='ssh-add -q ~/.ssh/id_rsa'
alias maskrun='mask --maskfile README.md'

## Rust replacements
alias core-grep='/usr/bin/grep'
alias core-ls='/usr/bin/ls'
alias core-cat='/usr/bin/cat'
alias grep='rg --color=always'
alias ls='exa --color=always --group-directories-first --icons'
alias cat='bat --color=always'
alias cd='z'
# core uutils
alias dd='uu-dd'
alias pwd='uu-pwd'
alias df='uu-df -h'
alias mv='uu-mv -f'
alias cp='uu-cp -rf'
alias date='uu-date'
alias echo='uu-echo'
alias head='uu-head'
alias kill='uu-kill'
alias rm='uu-rm -rf'
alias chmod='uu-chmod'
alias chown='uu-chown'
alias touch='uu-touch'
alias whoami='uu-whoami'
alias mkdir='uu-mkdir -p'
alias hostname='uu-hostname'